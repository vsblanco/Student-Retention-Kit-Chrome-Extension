{
  "manifest_version": 3,
  "name": "Date-Keyword Highlighter",
  "version": "3.2",
  "description": "Highlights todayâ€™s date, triggers flows, manages Found & Master lists",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://prod-12.westus.logic.azure.com/*",
    "https://prod-10.westus.logic.azure.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://nuc.instructure.com/courses/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://nuc.instructure.com/courses/*/grades/*"],
      "js": ["gradebook_injector.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Open the popup and focus Master List search."
    }
  }
}